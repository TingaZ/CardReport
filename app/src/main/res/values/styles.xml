<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Theme of the editor -->
    <style name="MainTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/editorColorPrimary</item>
        <item name="colorPrimaryDark">@color/editorColorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Theme of the editor -->
    <style name="MainMenuTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/editorColorPrimary</item>
        <item name="colorPrimaryDark">@color/editorColorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--Attributes for textViews-->
    <style name="SubjectAlignment">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!--LinearLayout attributes for the Horizontal Layout-->
    <style name="LinearlayoutAttributes">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Child_To_Main_LAyout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">#CFD8DC</item>
    </style>

    <style name="Child_To_Main_LAyout2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="DisplayTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#455A64</item>
        <item name="colorPrimaryDark">#607D8B</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--Networking Theme-->
    <style name="NetworkingTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/networkingColourPrimary</item>
        <item name="colorPrimaryDark">@color/networkingDarkPrimary</item>
    </style>

    <!--IT Management Theme-->
    <style name="IT_Theme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/itColourPrimary</item>
        <item name="colorPrimaryDark">@color/itDarkPrimary</item>
    </style>

    <!--IT Management Theme-->
    <style name="Design_Theme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/designColourPrimary</item>
        <item name="colorPrimaryDark">@color/designDarkPrimary</item>
    </style>

    <!--System Analysis Theme-->
    <style name="Sys_Analysis_Theme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/sysColourPrimary</item>
        <item name="colorPrimaryDark">@color/sysDarkPrimary</item>
    </style>

</resources>
