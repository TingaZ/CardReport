<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.cardreport">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/MainTheme">

        <activity android:name=".model.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity
            android:theme="@style/MainMenuTheme"
            android:label="@string/faculties"
            android:name=".model.MainMenu">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".model.MainActivity" />
        </activity>


        <activity
            android:theme="@style/NetworkingTheme"
            android:label="@string/networking"
            android:name=".model.Networking">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".model.MainMenu" />
        </activity>


        <activity
            android:theme="@style/IT_Theme"
            android:label="@string/it_management"
            android:name=".model.IT_Management">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".model.MainMenu" />
        </activity>


        <activity
            android:theme="@style/Design_Theme"
            android:label="@string/software_design"
            android:name=".model.Software_Design">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".model.MainMenu" />
        </activity>


        <activity
            android:theme="@style/Sys_Analysis_Theme"
            android:label="@string/system_analysis"
            android:name=".model.System_Analysis">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".model.MainMenu" />
        </activity>


        <activity
            android:name=".Display"
            android:label="@string/student_display"
            android:theme="@style/DisplayTheme" />
        <activity android:name=".AddStudent"></activity>
    </application>


</manifest>